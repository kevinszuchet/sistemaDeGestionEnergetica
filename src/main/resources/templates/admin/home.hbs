{{#partial "headTags"}}
	<!-- Datepicker -->
	<link id="bsdp-css" href="https://uxsolutions.github.io/bootstrap-datepicker/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet">
	<script src="https://uxsolutions.github.io/bootstrap-datepicker/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
	<script src="https://uxsolutions.github.io/bootstrap-datepicker/bootstrap-datepicker/js/locales/bootstrap-datepicker.es.min.js" charset="UTF-8"></script>
{{/partial}}

{{#partial "contenido"}}
	<div class="pb-2 mt-4 mb-2">
		<h2>Hogares</h2>
	</div>
	<div class="text-right">				
		<a href="/dispositivos/nuevo" class="btn btn-primary btn-outline-secondary">Agregar dispositivo gen&eacute;rico</a>
	</div>
	<div class="row">
        <div class='mt-3'>
        	<form class="form-inline">
        		<div class="form-group">
		            <div class="input-daterange input-group" id="datepicker">
			           	 <div class="form-row align-items-center">
			           		<label class="control-label">Filtrar consumos por per&iacute;odo</label>
			           		<div class="col-auto">
						    	<input type="text" class="input-sm form-control" name="fechaDesde" placeholder="Desde" />
							</div>
						    <div class="col-auto">
						    	<input type="text" class="input-sm form-control" name="fechaHasta" placeholder="Hasta"/>
						    </div>
						 </div>
					</div>
				</div>
			</form>
        </div>
    </div>
    
    <div class="list-group list-group-flush mt-5">
     		{{#each clientes}}
	      		{{{ isEven @index '<div class="row mb-2">' }}}
		      		<div class="col">
						 <li class="list-group-item">
						    <div class="d-flex w-100 justify-content-between">
						      <h5 class="mb-1">{{ nombre }}</h5>
						      <small class="text-muted">{{consumo this  ../fechaDesde  ../fechaHasta }}</small>
						    </div>
						    <p class="mb-1">Categor&iacute;a: {{categoria.nombre}}</p>
						    <small class="text-muted">Cliente desde {{fechaAlta}}</small>
						  </li>
		      		</div>
	      		{{{ isOdd @index '</div>' }}}
	      		{{#if @last}}
				{{{ isEven @index '</div>' }}}
				{{/if}}
			{{/each}}
      </div>
  
{{/partial}}

{{#partial "scripts"}}
	<script type="text/javascript">
	   $('#datepicker').datepicker({
		    clearBtn: true,
		    language: "es",
		    orientation: "bottom auto"
		});
	</script>
{{/partial}}

{{>layout.hbs}}